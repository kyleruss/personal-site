<div id="portfolio-container" class="section">
    <div id="project-container-wrapper" class="row h-100 flex-column justify-content-center align-items-center">
        <div id="project-container">
            <repo-data url="@Url.Content("~/Content/resources/repository-data.json")"></repo-data>

            <div id="preview-container">
                <div id="project-preview">
                </div>

                <div id="project-footer-controls">
                    <button class="btn project-nav-buttons prev-project-btn web-nav-buttons">
                        <span id="prev-project-text" class="project-nav-text">Previous</span>
                    </button>
                    <a target="_blank" href="https://github.com/kyleruss" id="project-view-link"><button id="project-view-btn">VIEW CODE</button></a>
                    <button class="btn project-nav-buttons next-project-btn web-nav-buttons">
                        <span id="next-project-text" class="project-nav-text">Next</span>
                    </button>

                    <button class="btn project-nav-buttons prev-project-btn mobile-nav-buttons">
                        <i class="fas fa-angle-left"></i>
                    </button>

                    <button class="btn project-nav-buttons next-project-btn mobile-nav-buttons">
                        <i class="fas fa-angle-right"></i>
                    </button>
                </div>
            </div>

            <div id="project-description-container" class="flex-column">
                <h1 id="project-title">
                    <a id="project-title-link" target="_blank" href="#">Byte Chat</a>
                </h1>

                <h1 id="project-description">
                    A personal web app highlighting my portfolio
                </h1>

                <div id="project-stats">
                    <h1 id="project-commits" class="project-stat-text">
                        <i class="far fa-arrow-alt-circle-up portfolio-stat-icon"></i> <span class="odometer" id="commits-stats"></span> 
                        <span class="portfolio-stat-title">GIT COMMITS</span>
                    </h1>

                    <h1 id="project-lines" class="project-stat-text">
                        <i class="fas fa-chart-line portfolio-stat-icon"></i> <span class="odometer" id="codeline-stats"></span> 
                        <span class="portfolio-stat-title">LINES OF CODE</span>
                    </h1>

                    <h1 id="project-languages" class="project-stat-text">
                        <i id="language-stat-icon" class="fas fa-laptop-code"></i>
                        <span class="language-stat"><span class="language-stat-text"> PHP</span></span>
                        <span class="language-stat"><span class="stat-separator">&#8901</span> <span class="language-stat-text">LARAVEL </span></span>
                        <span class="language-stat"><span class="stat-separator">&#8901</span> <span class="language-stat-text">JS</span></span>
                    </h1>
                </div>

                <!--<a href="#" id="view-github-btn" class="btn btn-primary">VIEW ON GITHUB</a>-->
            </div>
        </div>
    </div>
</div>