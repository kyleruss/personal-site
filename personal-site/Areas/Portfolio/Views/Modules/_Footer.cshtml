@using System.Configuration
@using System.Collections.Specialized;

@{ NameValueCollection SocialConfig = ConfigurationManager.GetSection("socialSettings") as NameValueCollection; }

<div id="footer-container">
    <div id="inner-footer" class="row h-100 flex-row  align-items-center">
        <div id="left-info" class="footer-info-container">
            <h1 class="footer-info-title">WORK TOGETHER</h1>
            <p class="footer-info-description">
                Looking to work together or hire me for a project? Check out my resume for info and
                get in touch with me
            </p>
            <button id="resume-btn" class="btn btn-primary footer-btn">RESUME</button>
        </div>
        <div id="footer-social-icons">
            <a href="@SocialConfig.Get("Twitter")">
                <div id="twitter-social-container" class="social-footer-icon-container social-display">
                    <i class="fab fa-twitter inner-social-icon"></i>
                </div>
            </a>

            <a href="@SocialConfig.Get("Github")">
                <div id="github-social-container" class="social-footer-icon-container social-display">
                    <i class="fab fa-github-alt inner-social-icon"></i>
                </div>
            </a>

            <a href="@SocialConfig.Get("Rss")">
                <div id="rss-social-container" class="social-footer-icon-container social-display">
                    <i class="fas fa-rss inner-social-icon"></i>
                </div>
            </a>

            <a href="@SocialConfig.Get("Github")">
                <div id="dribbble-social-container" class="social-footer-icon-container social-display">
                    <i class="fab fa-twitch inner-social-icon"></i>
                </div>
            </a>

            <a href="@SocialConfig.Get("StackOverflow")">
                <div id="stackoverflow-social-container" class="social-footer-icon-container social-display">
                    <i class="fab fa-stack-overflow inner-social-icon"></i>
                </div>
            </a>
        </div>
        <div id="right-info" class="footer-info-container">
            <h1 class="footer-info-title">VIEW PORTFOLIO</h1>
            <p class="footer-info-description">
                Interested in my recent workand past projects? Check outmy projects on github or youcan view my portfolio below
            </p>
            <button id="portfolio-btn" class="btn btn-primary footer-btn">PORTFOLIO</button>
        </div>
    </div>
</div>

<div id="footer-copyright-container" class="row flex-row justify-content-center align-items-center">
    <h1 id="copyright-header">COPYRIGHT 2019 KYLE RUSSELL  |   ALL RIGHTS RESERVED</h1>
</div>
